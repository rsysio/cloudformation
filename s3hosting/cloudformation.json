{
    "Description": "Hosting static files in S3 with Cloudfront",
    "Outputs": {
        "DistributionId": {
            "Value": {
                "Ref": "myDistribution"
            }
        }
    },
    "Parameters": {
        "FQDN": {
            "Description": "fully qualified domain name",
            "Type": "String"
        }
    },
    "Resources": {
        "S3Bucket": {
            "Properties": {
                "AccessControl": "PublicRead"
            },
            "Type": "AWS::S3::Bucket"
        },
        "myDistribution": {
            "Properties": {
                "DistributionConfig": {
                    "DefaultCacheBehavior": {
                        "ForwardedValues": {
                            "QueryString": "false"
                        },
                        "TargetOriginId": "Origin1",
                        "ViewerProtocolPolicy": "allow-all"
                    },
                    "Enabled": "true",
                    "HttpVersion": "http2",
                    "Origins": [
                        {
                            "DomainName": {
                                "Fn::GetAtt": [
                                    "S3Bucket",
                                    "DomainName"
                                ]
                            },
                            "Id": "Origin1",
                            "S3OriginConfig": {}
                        }
                    ]
                }
            },
            "Type": "AWS::CloudFront::Distribution"
        },
        "mycert": {
            "Properties": {
                "DomainName": {
                    "Ref": "FQDN"
                },
                "DomainValidationOptions": [
                    {
                        "DomainName": {
                            "Ref": "FQDN"
                        },
                        "ValidationDomain": {
                            "Ref": "FQDN"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "domainName",
                        "Value": {
                            "Ref": "FQDN"
                        }
                    }
                ]
            },
            "Type": "AWS::CertificateManager::Certificate"
        }
    }
}
